{% extends 'layout/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="site-section">
        <div class="container">
        <div class="row mb-5">
            <div class="col-12">
            <h2>Recent Posts</h2>
            </div>
        </div>
        <div class="row">
            {%for _news in news%}
                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="{{ path('app_new_show',{'id':_news.id}) }}"> <img class ="img-fuild rounded" src="{{ vich_uploader_asset(_news, 'imageFile') }}"></a>
                        <div class="excerpt">
                        <span class="post-category text-white bg-secondary mb-3">Politics</span>
        
                        <h2><a href="{{ path('app_new_show',{'id':_news.id}) }}">{{ _news.title }}</a></h2>
                        <div class="post-meta align-items-center text-left clearfix">
                        <figure class="author-figure mb-0 mr-3 float-left"></figure>
                        <span class="d-inline-block mt-1">By <a href="#">Carrol Atkinson</a></span>
                        <span>{{_news.createdAt|ago}}</span>
                        </div>
                        
                        <p>{{_news.description | slice(0,150)}}</p>
                        <p><a href="{{ path('app_new_show',{'id':_news.id}) }}">Read More</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
           
        </div>   
    </div>   
{% endblock %}
